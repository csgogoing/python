#

from sys import exit


class Scene(object):
	def doit(self):
		print "Done once"

class Engine(object):

	def __init__(self,engine_scene):
		self.engine_scene = engine_scene
		
	def play(self):
		next_scene = self.engine_scene.open_map()
		while True:
			current_scene = next_scene.doit()
			next_scene = self.engine_scene.next_map(current_scene)



class Central_map(Scene):

	def doit(self):
		abc = raw_input(">")
		if abc == '1':
			return "Enroll"
		else:
			return "Death"

class Death(Scene):
	"""docstring for death"""
	def doit(self):
		print " u death "
		exit(1)


class Enroll(Scene):
	"""docstring for enroll"""
	def doit(self):
		print "Enroll"
		return 'Cetral_map'


class Map(object):

	scenes = {
	'Central_map':Central_map(),
	'Death':Death(),
	'Enroll':Enroll()
	}

	def __init__(self,start_map):
		self.start_map = start_map

	def open_map(self):
		return self.next_map(self.start_map)

	def next_map(self,map_scene):
		return Map.scenes.get(map_scene)


a_map = Map('Central_map')
a_game = Engine(a_map)
a_game.play()
